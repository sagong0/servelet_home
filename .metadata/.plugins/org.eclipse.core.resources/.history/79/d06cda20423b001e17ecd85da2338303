	<script>
		function abc(){
			var ea = document.getElementsByClassName("no");
			
			var w = 0;
			while(w < ea.length){
				
				if(document.getElementsByClassName("no")[w].value == ""){
					alert("숫자 값 모두 입력해주세요");
				}
				
				w++;
			}
		}
	</script>
	
